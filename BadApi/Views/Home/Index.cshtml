@model BadApi.Models.ViewModel

@{
    ViewBag.Title = "Get your Tweets";
    var totalUniqueTweets = 11693;
}

<div class="jumbotron">
    <h2>BadApi Application!</h2>
    <p class="lead">You can get all the tweets from 2016-2017 or you can search for a certain tweet based on its content.</p>    
</div>

<div class="row">
    <div class="col-md-3">

        @using (Html.BeginForm("GetTweets", "Home", FormMethod.Post))
        {

        }


        <h4>Search Options</h4>
        <label for="alltweets">Search All 2016-2017</label>
        <a id="alltweets" href="/tweets" class="btn btn-info">Search All</a>
        <br />
        <label for="tweetById">Search By Id</label>
        <a id="tweetById" href="/tweets/" class="btn btn-info">Search All</a>
    </div>
    <div class="col-md-9">        
        @if (Model.Tweets != null && Model.Tweets.Count() != totalUniqueTweets)
        {
            <h3>Here are the Tweets you requested.</h3>
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Time Stamp</th>
                        <th>Tweet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tweet in Model.Tweets)
                    {
                        <tr>
                            <td>@tweet.Id</td>
                            <td>@tweet.Stamp</td>
                            <td>@tweet.Text</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else if (Model.Tweets?.Count() == totalUniqueTweets)
        {
            <p>We counted a total of <span>@Model.Tweets.Count()</span> Tweets from 2016-2017.</p>
            }

    </div>
</div>
